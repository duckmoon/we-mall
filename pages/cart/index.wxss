/* pages/cart/index.wxss */
.btn-address {
  width: 60%;
  margin: 10rpx 0;
}

.address-info {
  display: flex;
  padding: 20rpx;
}
.address-info .address {
  flex: 4;
}
.address-info .tel-phone {
  flex: 2;
  text-align: right;
}
.product-content {
  width: 100%;
}
.product-item {
  display: flex;
}
.check-box-wrapper {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.product-image {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.product-image image {
  width: 80%;
}

.product-item-info {
  flex: 4;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.product-item-info .title {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.price-number {
  display: flex;
  justify-content: space-between;
}
.goods-price {
  color: var(--themeColor);
}

.goods-count {
  display: flex;
  margin-right: 20rpx;
}
.goods-count .number-opreator {
  width: 40rpx;
  height: 40rpx;
  border: 1px solid #ccc;
  text-align: center;
}
.goods-count .goods-number {
  margin: 0 10rpx;
}
.bottom-content {
  display: flex;
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 90rpx;
  border-top: 1px solid #666;
}
.bottom-content .check-wrapper {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.bottom-content .total-price {
  flex: 4;
  display: flex;
  flex-direction: column;
  text-align: right;
  padding-right: 10rpx;
}
.bottom-content text {
  color: var(--themeColor);
  font-weight: 600;

}
.bottom-content .payment {
  flex: 3;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: var(--themeColor);
  font-weight: 600;
  font-size: 30rpx;
  color: white;
}